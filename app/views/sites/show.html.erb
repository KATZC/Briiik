<div class="container">
  <h1><%= @site.address %>
    <%= @site.company %>
  </h1>

  <% @site_users.each do |user| %>
    <%= user.email %>
  <% end %>

  <hr>

  <% if policy(site).create? %>
    <%= simple_form_for([@site, @site_user]) do |f| %>
      <%= f.input :user_id, collection: User.all %>
      <%= f.submit 'Ajouter', class: 'btn btn-primary' %>
    <% end %>
  <% end %>

  <br>
  <%= link_to 'Edit', edit_site_path(@site) %>
  <%= link_to 'Back', site_path %>
</div>


<%= render "shared/footer-sales" %>

