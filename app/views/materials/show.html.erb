<h1>Materials#show</h1>
<p>Find me in app/views/materials/show.html.erb</p>
<%= cl_image_tag @material.photo.key, height: 300, width: 400, crop: :fill %>
<ul>
  <li><%= @material.category %></li>
  <li><%= @material.highest_bid %></li>
  <li><%= @material.deadline %></li>
  <li><%= @material.description %></li>
  <li><%= @material.status %></li>
</ul>


<%= simple_form_for([@material, @bid]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.submit "Valider une enchÃ¨re", class: 'btn btn-primary' %>
  </div>
<% end %>

<% if @material.user == current_user %>
  <%= render "shared/footer-sales" %>
<% else %>
  <%= render "shared/footer-orders" %>
<% end %>
