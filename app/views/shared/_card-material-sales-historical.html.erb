<div class="card-material">
    <%= image_tag("hammer.jpg") %>
      <div class="card-material-infos">
        <p class="card-material-user"><%= material.deadline.strftime('%F')%></p>


        <div class="card-material-text">
          <div class="card-material-description"> <h2><%=material.description%></h2>
          </div>

          <div class="card-material-details">
            <div class ='card-material-left'>

              <p><%= material.category %></p>
              <p><%= material.site.address%></p>
            </div>
            <div class="card-material-right">
              <div class="card-prices">
                <p>Prix départ</p><h2 class="card-material-pricing card-material blue"> <%= material.minimum_price%>€</h2>
              </div>
              <div class="card-prices">
                <p>Prix de vente</p>
                <% if material.bids.any? %>
                  <h2 class="card-material-pricing card-material"><%= material.highest_bid%>€</h2>
                <% else %>
                  <h2 class="card-material-pricing card-material">Non vendu€</h2>
                 <% end %>
              </div>


            </div>
          </div>
        </div>
    </div>
</div>
